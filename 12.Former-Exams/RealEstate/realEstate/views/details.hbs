<section id="deatils-page">
    <div class="wrapper">
        <div class="product-img">
            <img src="{{data.imageUrl}}">
        </div>
        <div class="product-info">
            <div class="product-text">
                <div class="product-text">
                    <h1>Name: {{data.nameProp}}</h1>
                    <h2>Type: {{data.type}}</h2>
                    <h4>Year: {{data.year}}</h4>
                    <h4>City: {{data.city}}</h4>
                    <p>Description: {{data.description}}</p>

                    <!-- if there are already tenants of the housing, separate their names with a comma and a space ", "  -->
                    {{#if data.buyers.length}}
                    <p>People who rented this housing: {{#each req.user._id}}
                        {{this}}
                        {{/each}}</p>
                    {{else}}
                    <!-- If not display: -->
                    <p>People rented this housing: There are no tenants yet.</p>
                    {{/if}}
                </div>
            </div>

            <!-- if there is no registered user, do not display buttons-->
            {{#if username}}
            <div class="product-btn">
                {{#if data}}
                {{#if data.isOwner}}
                <a href="/data/{{data._id}}/edit" class="edit">Edit</a>
                <a href="/data/{{data._id}}/delete" class="remove">Delete</a>
                {{else}}
                {{#if data.hasBought}}
                <p class="alRentHome">You have already rented this home</p>
                {{else}}
                <a href="/data/{{data._id}}/buy" class="rentHome">Rent a home, available 2 housing</a>
                {{/if}}
                {{/if}}
                {{else}}
                <p class="no-housing">No Housing Available!</p>
                {{/if}}
            </div>
            {{/if}}
        </div>
    </div>
</section>

