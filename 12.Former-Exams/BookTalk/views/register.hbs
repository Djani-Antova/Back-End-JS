
    <section class="register-form-container">

        <form method="post" action="">
            <h3>Register</h3>
            <label>Email</label>
            <input type="email" name="email" class="box" value="{{body.email}}">
            <label>Username</label>
            <input type="text" name="username" class="box" value="{{body.username}}" id="">
            <label>Password</label>
            <input type="password" name="password" value="{{body.password}}"  class="box"  id="">
            <label>Confirm Password</label>
            <input type="password" name="repass" value="{{body.repass}}"  class="box" id="">
            <input type="submit" value="Register" class="btn">
            <p>Have an account ? <a href="/auth/login">Click here</a></p>
        </form>
    </section>

 