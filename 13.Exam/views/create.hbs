<main class="create">
    <!-- Create Page (Only for logged-in users) -->
    <section id="create">
        <div class="form">
            <h2>Add item</h2>
            <form class="create-form" method="post" >
                <input type="text" name="name" value="{{body.name}}" id="name" placeholder="Name" />
                <input type="text" name="years" value="{{body.years}}" id="years" placeholder="Years" />
                <input type="text" name="kind" value="{{body.kind}}" id="kind" placeholder="Kind" />
                <input type="text" name="imageUrl" value="{{body.imageUrl}}" id="animal-img" placeholder="Image url" />
                <input type="text" name="need" value="{{body.need}}" id="needs-of" placeholder="Needs of" />
                <input type="text" name="location" value="{{body.location}}" id="location" placeholder="Location" />
                <textarea id="description" placeholder="Description..." name="description">{{body.description}}</textarea>

                <button type="submit">Post</button>
            </form>
        </div>
    </section>
</main>


